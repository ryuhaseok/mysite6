<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<!-- 글 수정 -->
	<update id="update">
	<![CDATA[
		update board
		set title = #{title},
			content = #{content}
		where no = #{no}
	]]>
	</update>

	<!-- 글 조회수 증가시키기 -->
	<update id="updateAddHit">
	<![CDATA[
		update board
		set hit = hit + 1
		where no = #{no};
	]]>
	</update>

	<!-- 글 읽기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.BoardVo">
	<![CDATA[
		select  no,
				title,
		        writer,
		        content,
		        hit,
		        reg_date regDate
		from board
		where no = #{no}
	]]>
	</select>

	<!-- 글 삭제 -->
	<delete id="delete" parameterType="int">
	<![CDATA[
		delete from board
		where no = #{no}
	]]>
	</delete>

	<!-- 글 등록 -->
	<insert id="insert" parameterType="com.javaex.vo.BoardVo">
	<![CDATA[
		insert into board
		values(null, #{title}, #{writer}, #{content}, 0, now())
	]]>
	</insert>

	<!-- 전체리스트 가져오기 -->
	<select id="selectList" resultType="com.javaex.vo.BoardVo">
	<![CDATA[
		select  no,
				title,
		        writer,
		        hit,
		        reg_date regDate
		from board
	]]>
	</select>

</mapper>